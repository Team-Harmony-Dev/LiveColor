<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".EditColorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backBut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="1dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/back_arrow" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.34"
            android:text="Current Mode"
            android:textOff="RGB"
            android:textOn="HSV" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/colorShow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#03A9F4" />

        <ImageView
            android:id="@+id/colorNewShow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#9C27B0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.7"
        android:gravity="center|top"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colorN"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/lato_bold"
                android:lineSpacingMultiplier="0.9"
                android:text="Color Name"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/colorNN"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/lato_bold"
                android:lineSpacingMultiplier="0.9"
                android:text="Color Name Newy"
                android:textAlignment="center"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textRorH"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_marginLeft="21dp"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_vertical"
            android:text="Red: "
            android:textSize="24sp" />

        <SeekBar
            android:id="@+id/seekBarRed"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:max="255"
            android:progress="50"
            android:thumb="@drawable/edit_filled" />

        <TextView
            android:id="@+id/textGorS"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_marginLeft="21dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_vertical"
            android:text="Green: "
            android:textSize="24sp" />

        <SeekBar
            android:id="@+id/seekBarGreen"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:max="255"
            android:progress="50"
            android:thumb="@drawable/edit_filled" />

        <TextView
            android:id="@+id/textBorV"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_marginLeft="21dp"
            android:layout_weight="1"
            android:fontFamily="@font/lato_bold"
            android:gravity="center_vertical"
            android:text="Blue: "
            android:textSize="24sp" />

        <SeekBar
            android:id="@+id/seekBarBlue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:max="255"
            android:progress="50"
            android:thumb="@drawable/edit_filled" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/lato_regular"
                    android:text="Reset Color"
                    android:textAlignment="center" />

                <ImageButton
                    android:id="@+id/resetColor"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    android:tint="#00585757"
                    app:srcCompat="@drawable/reset" />

            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Save New Color" />

                <ImageButton
                    android:id="@+id/saveNewColor"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:padding="1dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_action_name" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>